{
  "name": "portfolio-server",
  "version": "0.0.1",
  "description": "Server side of my portfolio website.",
  "main": "./build/dist/js/index.mjs",
  "type": "module",
  "private": true,
  "author": "Snap <XxSnapperGeexX@gmail.com> (https://github.com/SnapperGee)",
  "repository": "github:SnapperGee/portfolio-server",
  "bugs": {
    "url": "https://github.com/SnapperGee/portfolio-server/issues"
  },
  "scripts": {
    "build-dev": "tsc -p ./tsconfig.dev.json",
    "build-dist": "tsc -p ./tsconfig.dist.json",
    "dev": "NODE_ENV=development node --enable-source-maps --loader ts-node/esm ./src/main/ts/index.mts",
    "prebuild-dev": "rm -rf ./build/dev",
    "prebuild-dist": "rm -rf ./build/dist",
    "prestart": "npm run build-dist",
    "start": "NODE_ENV=production node ./build/dist/js/index.mjs",
    "watch": "tsc -p ./tsconfig.dev.json --watch"
  },
  "dependencies": {
    "express": "^4.18.2",
    "nodemailer": "^6.9.8",
    "tslib": "^2.6.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/nodemailer": "^6.4.14",
    "dotenv": "^16.3.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
